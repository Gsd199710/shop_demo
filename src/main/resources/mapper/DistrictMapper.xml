<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace属性：指定当前文件与哪个接口进行映射，需要指定的完整接口路径-->
<mapper namespace="com.demo.shop.mapper.DistrictMapper">

    <select id="findByParent" resultType="com.demo.shop.entity.District">
        SELECT * FROM t_dict_district WHERE parent=#{parent}
        ORDER BY code ASC
    </select>
    <select id="findNameByCode" resultType="java.lang.String">
        SELECT name FROM t_dict_district WHERE code=#{code}
    </select>
</mapper>